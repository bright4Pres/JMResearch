rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{uid} {
      // Allow user to create their own profile document after authenticating
      allow create: if request.auth != null && request.auth.uid == uid;

      // Allow read for owner; staff (custom claim) can list/read all
      allow read: if request.auth != null && (request.auth.uid == uid || request.auth.token.isStaff == true);
      allow list: if request.auth != null && request.auth.token.isStaff == true;

      // Allow updates by owner but prevent client writes to 'isStaff'
      allow update: if request.auth != null
                    && request.auth.uid == uid
                    && !( 'isStaff' in request.resource.data );

      // Only admin (staff) can delete
      allow delete: if request.auth != null && request.auth.token.isStaff == true;
    }

    // Add other rules as needed
  }
}
